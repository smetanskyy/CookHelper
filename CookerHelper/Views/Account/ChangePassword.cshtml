@{
    ViewData["Title"] = "ChangePassword";
}

@model CookerHelper.ViewModels.ChangePasswordVM;

<h2>ChangePassword</h2>

<form asp-action="ChangePassword" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="text" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm"></label>
            <input type="text" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm" />
        </div>
        <div class="form-group">
            <input type="submit" value="Confirm" class="btn btn-outline-dark" />
        </div>
    </div>
</form>